<div class="container">
    <h4 class="mt-3"style="width:15rem">Latest Products</h4>
    <hr>
    <div class="row">

    <% @products.each do |product| %>

        <div class="col-lg-3 col-md-6 col-xs-12 mt-3">
                <div class="transCard">
                        <img class=" w-100 h-80 transImg"src="img/products/<%=product.img%>">
                </div>      
                <div class="product__item__text">
                    <h6><%= link_to product.title, product_path(product)%></h6>                 
                    <div class="rating">
                        <i class="fa fa-star" style="color:#e7ab3c"></i>
                        <i class="fa fa-star"style="color:#e7ab3c"></i>
                        <i class="fa fa-star"style="color:#e7ab3c"></i>
                        <i class="fa fa-star"style="color:#e7ab3c"></i>
                        <i class="fa fa-star"style="color:#e7ab3c"></i>
                    </div>
                    <div class="product__price"><span>$<%=product.price%></span></div>
                </div>
        </div>
    <%end%>
    </div>
